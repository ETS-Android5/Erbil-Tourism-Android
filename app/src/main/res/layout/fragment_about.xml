<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutFragment"
    android:background="?attr/backgroundcolor"
    android:padding="10dp"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#3096ec"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/aboutus"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="200dp"
                        android:src="@drawable/saad3" />
                    <ImageView
                    android:layout_width="80dp"
                    android:layout_height="200dp"
                    android:src="@drawable/amen3" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="200dp"
                        android:src="@drawable/ziadassad3" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="200dp"
                        android:src="@drawable/umer3" />
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="200dp"
                        android:src="@drawable/yunis3" />


                </LinearLayout>
                <TextView
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutUS"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#3096ec"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="20dp"
                android:id="@+id/abouterbil"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/abouterbil1"
                         android:scaleType="fitXY"
                        />

                </LinearLayout>
                <TextView
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutERBIL"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#3096ec"
                android:id="@+id/erbilvideo"
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/castle1"
                    android:scaleType="fitXY"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/ic_play_circle_outline_black_24dp" />

                <TextView
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:layout_marginTop="200dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutvideo"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>

</FrameLayout>