<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assiment">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/plane_tourism"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/plane_tourism"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".VideoErbil" />
        <activity android:name=".AboutErbil" />
        <activity android:name=".AboutUS" />
        <activity android:name=".ChangePassword" />
        <activity
            android:name=".MapsActivity2"
            android:label="map" />
        <activity android:name=".ResturantList" />
        <activity android:name=".AddPlace" />
        <activity android:name=".SettingFragment" />
        <activity
            android:name=".LoginActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            />

        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.assiment.MainActivity" />

        <activity
            android:name=".Main2Activity"
            android:label="@string/listPlace" />
        <activity
            android:name=".HotelList"
            android:label="@string/Hotel" />
        <activity
            android:name=".ShopList"
            android:label="@string/shop" />
        <activity
            android:name=".TourismList"
            android:label="@string/placetourist" />
        <activity
            android:name=".Signup"
            android:screenOrientation="portrait" />
    </application>

</manifest>